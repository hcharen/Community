<main class="container-home">

  <div class="jumbotron">

    <div class="container text-center">

      <h1><u>The Lounge</u></h1>
      <p>Bit 'O' Woods Farm</p>

    </div>
  </div>

  <%= render "layouts/navbar.html" %>

<div class="row">
<div class="col-md-9">
  <ul id="conversations-list">
    <% @conversations.each do |conversation| %>
      <%= render 'conversations/conversation', conversation: conversation, user: current_user %>
    <% end %>
  </ul>
</div>


<div class="col-md-3">
  <div class="user-list">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">User list</h3>
      </div>
        <div class="panel-body">
          <ul>
             <% @users.each do |user| %>
               <li><%= link_to user.email, conversations_path(user_id: user), remote: true, method: :post %></li>
             <% end %>
             </ul>
        </div>
      </div>
    </div>
  </div>


 <%= @conversations.each do |conversation| %>
 <%= render 'conversations/conversation', conversation: conversation, user: current_user %>
 <% end %>
</main>
</div>
