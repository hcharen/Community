
<main class="container-home">
  <div class="jumbotron">
    <div class="container text-center">
      <h1><u>Community</u></h1>
      <p>Bit 'O' Woods Farm</p>
    </div>
  </div>
<%= render "layouts/navbar.html" %>



  <div id="item-list" class="row home-header">
    <div class="col-md-1 mr-auto">
      <button id="new-item-button" class="btn btn-primary mr-auto">New</button>
      <div id="new-item-popover" class="item-popover is-hidden">
         <%= form_with(model: @item, id: "new-item-form", remote: true) do |f| %>
         <div class="form-group">
          <%= f.text_field :short_desc, class: "form-control", id: "item-name-input", placeholder: "Item Type", autoFocus: true %>
        <%#  <%= f.integer_field :size class: "form-control", id: "item-size-input", placeholder: "Item Size", autoFocus: true %>
          <%= f.text_field :description, class: "form-control", id: "item-description-input", placeholder: "Item Description", autoFocus: true %>
            </div>
        <%= f.submit "Save", class: "btn btn-success" %>
        <button id="cancel-item-popover" class="btn btn-secondary">Cancel</button>
       <% end %>
       </div>
    </div>
    <div class="col-md-4">
      <h3 class="text-center">Items</h3>
    </div>
    <div class="col-md-1 ml-auto">
      <button class="btn ml-auto">...</button>
    </div>
  </div>
  <div id="item-list" class="row home-items">
   <% @items.each do |p| %>
    <%= render "item_card", item: p %>
   <% end %>
  </div>
</main>
